#!/bin/sh
A1D_timerStart=$(date +'%s')
A1D_currentWoringDir=$(pwd)
A1D_sproutDir=$HOME'/Code/onmeda.de/sprout/branches/onmeda.de/'
A1D_buildOutputDir=$HOME/
A1D_force_switch=0
if [ "$1" == "-f" ];then
  A1D_force_switch=1
fi
cd $A1D_sproutDir
echo '-----------------------------------------------------------------------'


echo 'Removing old build.zip...'
rm -rf build.zip
rm -rf ${A1D_buildOutputDir}build.zip



echo 'Making new build...'
bundle exec middleman build --verbose


## Checking for errors in build
build_errors=$(grep -R "home/marco" build/ | egrep "\.css|\.js" | cut -f1 -d":" | uniq)
build_errors_counter=$(grep -R "home/marco" build/ | egrep "\.css|\.js" | cut -f1 -d":" | uniq | wc -l)

if [ $A1D_force_switch -eq 0 ];then
  if [ $build_errors_counter -gt 0 ];
  then
    echo 'Errors detected..'
    echo ''
    echo ''
    echo $build_errors
    exit 1;
  fi
else
  echo ''
  echo ''
  echo 'Force switch activated.. not checking for errors..'
  echo 'Hero-mode is active.. May the force be with you ..'
  echo ''
fi


echo 'Zipping up new contents...'
zip -rq build.zip build



echo 'Truncation existing build directory...'
rm -rf build/*
echo ''
echo ''


echo '======================================================================='
echo 'File information of the current build zip:'
echo '======================================================================='
echo ''
ls -lh build.zip
echo ''
echo '======================================================================='
echo ''
echo ''



echo 'Moving build.zip'
mv build.zip ${A1D_buildOutputDir}build.zip



A1D_timerEnd=$(date +'%s')
A1D_timeElapsed=$((A1D_timerEnd - A1D_timerStart))
printf 'This script took %s seconds to finish.\r' $A1D_timeElapsed
echo ''
echo ''



echo -n 'Do you want to inflate the build on the remote host? (y/n)'
read -n1 A1D_transferAndInflate

if [ $A1D_transferAndInflate = "y" ];
then
    echo ''
    echo ''
    echo 'Transfering file to live server...'
    scp ${A1D_buildOutputDir}build.zip root@192.168.32.33:/tmp
    echo 'Starting remote script...'
    ssh root@192.168.32.33 'sh /home/webchef/bin/install_build.sh /tmp/build.zip'
else
    echo ''
    echo 'You did not want to upload and inflate the build...'
    echo ''
fi


A1D_timerEndFull=$(date +'%s')
A1D_timeElapsedFull=$((A1D_timerEndFull - A1D_timerStart))
cd $A1D_currentWoringDir
echo ''
echo ''
printf 'The whole process (included uploading the file) took %s seconds to finish.\r' $A1D_timeElapsedFull
echo ''
echo ''
echo '-----------------------------------------------------------------------'
echo ''
