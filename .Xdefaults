URxvt*termName: rxvt
URxvt*depth: 24
URxvt*geometry: 90x30
URxvt*transparent: false
URxvt*fading: 0
URxvt*loginShell: true
! scrollback buffer lines - 65535 is max on most machines (64 is default)
URxvt*saveLines: 65535
URxvt*internalBorder: 3
URxvt*lineSpace: 0

! Fonts
URxvt*font: xft:Source\ Code\ Pro\ for\ Powerline:Light:pixelsize=14,xft:PowerlineSymbols
URxvt.letterSpace: 1
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

! Scrollbar
URxvt*scrollBar: false

! Change font-size on the fly
! https://github.com/majutsushi/urxvt-font-size
URxvt*keysym.C-Up:     perl:font-size:increase
URxvt*keysym.C-Down:   perl:font-size:decrease
URxvt*keysym.C-Left:   perl:font-size:reset
URxvt*keysym.C-Right:  perl:font-size:reset

! Perl extensions
URxvt*perl-ext-common: default,matcher,font-size
URxvt.url-launcher: /usr/bin/xdg-open
URxvt*matcher.button: 1
URxvt*intensityStyles: false

! special
URxvt*foreground:   #ABB2BF
URxvt*background:   #282C34
URxvt*cursorColor:  #ABB2BF

! black
URxvt*color0:       #282C34
URxvt*color8:       #3E4452

! red
URxvt*color1:       #E06C75
URxvt*color9:       #BE5046

! green
URxvt*color2:       #98C379
URxvt*color10:      #98C379

! yellow
URxvt*color3:       #E5C07B
URxvt*color11:      #D19A66

! blue
URxvt*color4:       #61AFEF
URxvt*color12:      #61AFEF

! magenta
URxvt*color5:       #C678DD
URxvt*color13:      #C678DD

! cyan
URxvt*color6:       #56B6C2
URxvt*color14:      #56B6C2

! white
URxvt*color7:       #ABB2BF
URxvt*color15:      #5C6370


