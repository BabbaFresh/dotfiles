!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt*termName: rxvt
URxvt.depth: 16
URxvt.geometry: 90x30
URxvt.transparent: false
URxvt.fading: 0
URxvt.loginShell: true
! scrollback buffer lines - 65535 is max on most machines (64 is default)
URxvt*saveLines: 65535
URxvt.internalBorder: 3
URxvt.lineSpace: 0

! Fonts
URxvt*.font: xft:Source\ Code\ Pro\ for\ Powerline:Light:size=9

! Scrollbar
URxvt.scrollStyle: rxvt
URxvt.scrollBar: false

! Change font-size on the fly
! https://github.com/majutsushi/urxvt-font-size
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-Left:   perl:font-size:reset
URxvt.keysym.C-Right:  perl:font-size:reset

! Perl extensions
URxvt.perl-ext-common: default,matcher,font-size
URxvt.matcher.button: 1
URxvt.url-launcher: chromium

URxvt.intensityStyles: false

! Wombat Colors
URxvt*foreground: rgb:ff/ff/ff
URxvt*background: rgb:16/16/16
!black
URxvt*color0: rgb:16/16/16
URxvt*color8: rgb:85/7B/6F
!red
URxvt*color1: rgb:e5/78/6d
URxvt*color9: rgb:9d/2a/3a
!green
URxvt*color2: rgb:ca/e6/82
URxvt*color10: rgb:8b/be/34
!brown/yellow
URxvt*color3: rgb:ff/e1/61
URxvt*color11: rgb:ff/c4/42
!blue
URxvt*color4: rgb:52/83/d7
URxvt*color12: rgb:3b/5d/9a
!magenta
URxvt*color5: rgb:b6/98/d9
URxvt*color13: rgb:a5/7a/c4
!cyan
URxvt*color6: rgb:a8/c6/f2
URxvt*color14: rgb:5d/a7/e1
!white
URxvt*color7: rgb:f6/f3/e8
URxvt*color15: rgb:d3/d7/cf
